<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phone_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.logintest.phone">
    <TextView
        android:id="@+id/phone_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#0e6fb7"
        android:text="通信录"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/phone_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMain"
        android:layout_below="@+id/phone_list" />

    <EditText
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/search"
        android:layout_gravity="center"
        android:layout_marginLeft="11dp"
        android:hint="搜索"
        android:textSize="16dp"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:drawablePadding="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/phone_list"
        android:textColorHint="@color/colorMain"/>
</RelativeLayout>
